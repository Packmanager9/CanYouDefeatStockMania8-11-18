<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/LayoutCage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/playername"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="21sp"

                android:textColor="#000900"
                android:textStyle="bold"
                />

            <TextView

                android:id="@+id/playerhealth"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/playerdefense"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/playerattack"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/playerspeed"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/playerhemove"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/playerspmove"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/playeratmove"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12sp"/>


            <ImageView

                android:id="@+id/playerturn"
                android:layout_width="40dp"
                android:layout_height="40dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:id="@+id/enemyname"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="21sp"

                android:textColor="#000900"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/enemyhealth"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/enemydefense"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/enemyattack"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/enemyspeed"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="12sp"/>
            <TextView

                android:id="@+id/enemyhemove"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/enemyspmove"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12sp"/>

            <TextView

                android:id="@+id/enemyatmove"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12sp"/>

            <ImageView

                android:id="@+id/enemyturn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/Scroller"
        android:layout_width="260dp"
        android:layout_height="170dp"
        android:layout_below="@+id/LayoutCage"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/ScrollerLongText"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"/>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/statsbutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"

        android:layout_alignTop="@+id/heal"
        android:text="Stats" />

    <Button
        android:id="@+id/attack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/statsbutton"

        android:layout_toEndOf="@+id/statsbutton"
        android:text="Attack" />

    <Button
        android:id="@+id/Special"
        android:layout_width="63dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/statsbutton"
        android:textSize="27sp"
        android:layout_toStartOf="@+id/heal"
        android:text="âœ®" />

    <Button
        android:id="@+id/heal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp"
        android:text="Heal" />

    <Button
        android:id="@+id/Resetti"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/statsbutton"
        android:layout_alignParentEnd="true"
        android:text="Max" />


    <Button
        android:id="@+id/Switcher"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Resetti"
        android:layout_alignParentEnd="true"
        android:text="flip" />


    <Button
        android:id="@+id/RunIt"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/statsbutton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:text="Test" />

    <Button
        android:id="@+id/Count"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="214dp"
        android:text="#" />

    <Button
        android:id="@+id/TellIt"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/statsbutton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:text="Tell" />


    <Button
        android:id="@+id/RivalSwap"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/statsbutton"
        android:layout_centerHorizontal="true"
        android:text="Rival" />

    <Button
        android:id="@+id/NewMonstersButton"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/statsbutton"
        android:layout_alignParentStart="true"
        android:text="New" />
    <Button
        android:id="@+id/Capture"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_above="@+id/NewMonstersButton"
        android:layout_alignParentStart="true"
        android:text="Capture" />
    <Button
        android:id="@+id/Deploy"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_above="@+id/Capture"
        android:layout_alignParentStart="true"
        android:text="Deploy" />

    <EditText
        android:id="@+id/typehereID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:inputType="number" />

</RelativeLayout>